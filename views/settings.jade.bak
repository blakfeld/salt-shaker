extends layout

block page_header
  .page-header
    .pull-right
      .page-header-toolbar
        .btn-group
          a.btn.btn-primary.btn-sm(id='edit' type='button' href="/settings/edit")
            span.glyphicon.glyphicon-edit
            | &nbsp;&nbsp;Edit
          .btn-group
            button.btn.btn-info.btn-sm.dropdown-toggle(type="button" data-toggle="dropdown")
              | More&nbsp;
              span.glyphicon.glyphicon-chevron-down
            ul.dropdown-menu
              li.active
                  a(hef='#') App Settings
              li
                a(href='#') Server Settings
    .page-header-title
      h2= title

block content
  .row
    .col-sm-12
      ul.list-group
        li.list-group-item
          h4.list-group-item-heading Salt Server
          p.list-group-item-text http://example.com:8000
        li.list-group-item
          h4.list-group-item-heading Username
          p.list-group-item-text User
        li.list-group-item
          h4.list-group-item-heading Password
          p.list-group-item-text *****
        li.list-group-item
          h4.list-group-item-heading Authentication type
          p.list-group-item-text epam
